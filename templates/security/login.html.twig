{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}



<div class="container text-center">
    <div class="row justify-content-start">
        <div class="col-4">
        .
        </div>
        <div class="col-4">
        .
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
        .
        </div>
        <div class="col-4">
        .
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-4">
        .
        </div>
        <div class="col-4">
        .
        </div>
    </div>
    <div class="row justify-content-around">
        <div class="col-4">
        .
        </div>
        <div class="col-4">
        .
        </div>
    </div>
    <div class="row justify-content-between">
        <div class="col-4">
        .
        </div>
        <div class="col-4">
        .
        </div>
    </div>
    <div class="row justify-content-evenly">
        <div class="col-4">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
                    <h1 class="h1 mb-1 font-weight-normal">Vous êtes connectés comme</h1>
                    {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            {% endif %}
        </div>
        <div class="col-4">
        <form method="post">
        
            <label for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            <label for="password"> Mot de passe </label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me"> Souvenez-vous de moi</label>
                        <a href="{{ path('app_forgot_password_request') }}" class="btn btn-link">Mot de passe oublié ?</a>

                    </div>
            

                <button class="btn btn-lg btn-primary" type="submit">
                    Se connecter
                </button>
            </div>
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
            #}
    </form>
        </div>
    </div>
</div>


        
    

    
{% endblock %}
